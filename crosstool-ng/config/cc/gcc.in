    bool
    prompt "4.4.1"
    select CC_GCC_4_4_or_later

config CC_V_4_4_0
    bool
    prompt "4.4.0"
    select CC_GCC_4_4_or_later

config CC_V_4_3_5
    bool
    prompt "4.3.5"
    select CC_GCC_4_3_or_later

config CC_V_4_3_4
    bool
    prompt "4.3.4"
