    bool
    prompt "4.3.1"
    select CC_GCC_4_3_or_later

config CC_V_4_2_4
    bool
    prompt "4.2.4"
    select CC_GCC_4_2_or_later

config CC_V_4_2_3
    bool
    prompt "4.2.3 (OBSOLETE)"
    select CC_GCC_4_2_or_later
